<Window x:Name="StationsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.StationsWindow"
        mc:Ignorable="d"
        Title="StationsWindow" Height="450" Width="1034" Icon= "kavimIcon.png" >
    <Window.Background>
        <SolidColorBrush Color="YellowGreen" Opacity="100">
            <SolidColorBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform X="5"/>
                </TransformGroup>
            </SolidColorBrush.RelativeTransform>
        </SolidColorBrush>
    </Window.Background>
    <Grid>
        <ComboBox x:Name="CBChosenStat" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="142,61,0,0" VerticalAlignment="Top" Width="264" SelectionChanged="CBChosenStat_SelectionChanged" FontWeight="Bold" FontStyle="Normal"/>
        <Label Content="Chosen station" HorizontalAlignment="Left" Margin="40,57,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Normal"  FontFamily="Tahoma"  Foreground="Navy"/>

        <Grid x:Name="gridOneStation"  HorizontalAlignment="Left" Margin="64,118,0,0" VerticalAlignment="Top" Width="356">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47.6"/>
                <ColumnDefinition Width="26"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Address:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3.4" Grid.Row="0" VerticalAlignment="Center" FontFamily="Tahoma"  Foreground="Navy" Grid.ColumnSpan="2"/>
            <TextBox x:Name="addressTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="3.333,4,-153.333,4.333" Grid.Row="0" Text="{Binding Address, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="278" FontFamily="Tahoma"  Foreground="Navy" />
            <Label Content="Code:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3.6,0,2.8" Grid.Row="1" VerticalAlignment="Center" FontFamily="Tahoma"  Foreground="Navy"/>
            <TextBox x:Name="codeTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="3.333,3.667,-152.667,4.667" Grid.Row="1" Text="{Binding Code, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="278" FontFamily="Tahoma"  Foreground="Navy" IsEnabled="False"/>
            <Label Content="Lattitude:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3.4,0,3" Grid.Row="4" VerticalAlignment="Center" FontFamily="Tahoma"  Foreground="Navy" Grid.ColumnSpan="2"/>
            <TextBox x:Name="lattitudeTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="3.333,3.667,-150,4.667" Grid.Row="4" Text="{Binding Lattitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="278" FontFamily="Tahoma"  Foreground="Navy"/>
            <Label Content="Longitude:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,2.8,0,3.6" Grid.Row="3" VerticalAlignment="Center" FontFamily="Tahoma"  Foreground="Navy" Grid.ColumnSpan="2"/>
            <TextBox x:Name="longitudeTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="3.333,4,-151.333,4.333" Grid.Row="3" Text="{Binding Longitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="278" FontFamily="Tahoma"  Foreground="Navy"/>
            <Label Content="Name:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3.2,0,3.2" Grid.Row="2" VerticalAlignment="Center" FontFamily="Tahoma"  Foreground="Navy" Grid.ColumnSpan="2"/>
            <TextBox x:Name="nameTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="3.333,3.333,-152,4" Grid.Row="2" Text="{Binding Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="278" FontFamily="Tahoma"  Foreground="Navy"/>
        </Grid>
        <DataGrid x:Name="linesDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="508,101,168.333,119.667" RowDetailsVisibilityMode="VisibleWhenSelected" GridLinesVisibility="Horizontal" FontFamily="Tahoma"  Foreground="Navy">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="busNumberColumn"    Binding="{Binding BusNumber}"   Header="Bus Number" Width="SizeToHeader" Foreground="MidnightBlue" />
                <DataGridTextColumn x:Name="areaColumn"         Binding="{Binding Area}"        Header="Area" Width="SizeToHeader" Foreground="MidnightBlue"/>
                <DataGridTextColumn x:Name="firstStationColumn" Binding="{Binding FirstStation}" Header="First Station" Width="SizeToHeader" Foreground="MidnightBlue"/>
                <DataGridTextColumn x:Name="lastStationColumn"  Binding="{Binding LastStation}" Header="Last Station" Width="SizeToHeader" Foreground="MidnightBlue"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="BTUpdate" Content="Update station" HorizontalAlignment="Left" Margin="142,352,0,0" VerticalAlignment="Top" Width="104" Click="BTUpdate_Click" FontWeight="Bold" FontStyle="Normal" FontFamily="Tahoma"  Foreground="Navy" BorderThickness="0,0,0,3" BorderBrush="#FF7EC700" Height="30" Background="Transparent" />
        <Button x:Name="BTDelete" Content="Delete station" HorizontalAlignment="Left" Margin="354,352,0,0" VerticalAlignment="Top" Width="93" Click="BTDelete_Click" FontWeight="Bold" FontStyle="Normal" FontFamily="Tahoma"  Foreground="Navy" BorderThickness="0,0,0,3" BorderBrush="#FF7EC700" Height="30" Background="Transparent"/>
        <Button x:Name="BTAdd"    Content="Add station"    HorizontalAlignment="Left" Margin="564,352,0,0" VerticalAlignment="Top" Width="81" Click="BTAdd_Click" FontWeight="Bold" FontStyle="Normal" FontFamily="Tahoma"  Foreground="Navy" BorderThickness="0,0,0,3" BorderBrush="#FF7EC700" Height="30" Background="Transparent"/>

    </Grid>
</Window>
