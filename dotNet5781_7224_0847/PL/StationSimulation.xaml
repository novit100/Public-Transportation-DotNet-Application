<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.StationSimulation"
        mc:Ignorable="d"
        Title="StationSimulation" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="LineTemplate"
                  DataType="local:BO.LineAndTime" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"  />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="230" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Path=LineNum}" FlowDirection="RightToLeft" HorizontalAlignment="Stretch" FontFamily="Dubai Light" Foreground="Yellow" FontSize="14"  />
                <TextBlock Grid.Column="2" x:Name="kmTextBlock" Text="{Binding Path=DestinationStation}" FlowDirection="RightToLeft" HorizontalAlignment="Stretch" FontFamily="Dubai Light"  FontSize="14" Foreground="Yellow" />
                <TextBlock Grid.Column="4" x:Name="lala" Text="{Binding Path=Stringtimes}" HorizontalAlignment="Right" FlowDirection="RightToLeft" FontFamily="Dubai Light"  FontSize="14" Foreground="Yellow" />


            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Label x:Name="NoBusesSoon" Content="No buses coming in the next hour..." HorizontalAlignment="Left" Margin="196,324,0,0" VerticalAlignment="Top" Height="40" Width="368" FontSize="20" Background="{x:Null}" Visibility="Hidden" />

        <TextBlock x:Name="timerTextBlock" HorizontalAlignment="Left" FlowDirection="RightToLeft" Margin="255,30,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="35" Width="249" FontSize="16" FontWeight="Bold" FontFamily="Yu Gothic UI Semibold"/>
        <ListBox x:Name="LineAndTimeGrid" FlowDirection="RightToLeft"  ItemsSource="{Binding}" ItemTemplate="{StaticResource LineTemplate}" HorizontalAlignment="Right" Height="217" Margin="0,102,205.333,0" VerticalAlignment="Top" Width="417" Background="#FF0F0F0F"/>
        <Canvas HorizontalAlignment="Left" Visibility="Visible" Height="32" Margin="171,70,0,0" VerticalAlignment="Top" Width="417" Background="Black"/>
        <!--<Image HorizontalAlignment="Left" Height="32" Margin="395,70,0,0" VerticalAlignment="Top" Width="42" Source="clockIcon.png" OpacityMask="#FF0C0C0C"/>
        <Image HorizontalAlignment="Left" Height="28" Margin="599,74,0,0" VerticalAlignment="Top" Width="28" Source="picture.png" OpacityMask="#FF0C0C0C"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="717,72,0,0" VerticalAlignment="Top" Width="29" Source="הורדה.png" OpacityMask="#FF0C0C0C"/>-->

    </Grid>
</Window>
