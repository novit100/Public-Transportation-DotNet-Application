<Window x:Class="PL.StationSimulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationSimulation" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="background.png"/>
    </Window.Background>
    <Grid >
        <ListBox x:Name="list" ItemsSource="{Binding}" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Height="341" Margin="10,69,0,0" VerticalAlignment="Top" Width="774"  FontSize="30" BorderBrush="{x:Null}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Tag="{Binding}" Grid.Column="0" Text="{Binding Path=LineCode}" />
                        <TextBlock Tag="{Binding}" Grid.Column="1" Text="{Binding Path=LastStation}"  />
                        <TextBlock Tag="{Binding}" Grid.Column="2" Text="{Binding}" HorizontalAlignment="Left" />
                        <Image  Height="23" Width="23" Grid.Column="2" Visibility="{Binding Path=Image.Visibility}" VerticalAlignment="Top"  />
                    </Grid>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock x:Name="timeTextBlock" HorizontalAlignment="Left" Margin="320,26,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="38" Width="293" />
        <Label x:Name="NoBusesSoon" Content="No buses anytime soon..." Visibility="Collapsed" HorizontalAlignment="Left" Margin="163,193,0,0" VerticalAlignment="Top" Height="75" Width="470" FontSize="40" Background="{x:Null}" />
    </Grid>
</Window>
