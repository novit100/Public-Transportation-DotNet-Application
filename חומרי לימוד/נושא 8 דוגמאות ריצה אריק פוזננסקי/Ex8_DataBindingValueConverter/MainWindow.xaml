<Window x:Class="Ex8_DataBindingValueConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex8_DataBindingValueConverter"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <!-- Silent Run Time Error, Visibility is not boolean
    <StackPanel>
        <Button Content="button"
            Visibility ="{Binding ElementName=checkbox, Path=IsChecked}" />
        <CheckBox x:Name="checkbox"
              Content="hide button?" />
    </StackPanel>
    -->
    <Window.Resources>
        <local:NotBooleanToVisibilityConverter 
      x:Key="notBooleanToVisibilityConverter" />
    </Window.Resources>
    <StackPanel>
        <Button Content="button"
            Visibility="{Binding ElementName=checkbox1, 
                                 Path=IsChecked, 
                                 Converter={StaticResource notBooleanToVisibilityConverter}}" />
        <CheckBox x:Name="checkbox1"
              Content="hide button?" />
    </StackPanel>

</Window>

