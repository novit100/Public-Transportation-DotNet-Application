<Window x:Class="Ex6_OrigObjectDataContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex6_OrigObjectDataContext"
        mc:Ignorable="d"
                Title="MainWindow"
        Height="85.909"
        Width="525">

    <StackPanel x:Name="stackPanel"
              Orientation="Horizontal"  >
        <TextBlock Text="User: " Width="83" />
        <TextBox Text="{Binding Mode=TwoWay, Path=User}"  Width="98" />
        <TextBlock Text="Password: " />
        <TextBox Text="{Binding Path=Password}" Width="140" />
        <Button Content="Show Object" Width="75" Click="Button_Click"/>

    </StackPanel>

</Window>

