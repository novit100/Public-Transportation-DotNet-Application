<Window x:Class="Ex4_OrigObjectElementName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex4_OrigObjectElementName"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="615.5">
    <StackPanel>
        <TextBlock Text="Using ElementName   " FontSize="18" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Color: " FontSize="18" />
            <TextBox x:Name="textColor" 
                     Background="{Binding ElementName=textColor, Path=Text}" FontSize="18" />
        </StackPanel>
            
    </StackPanel>        

</Window>
