<Window x:Class="Ex0_ManualBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex0_ManualBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Manualy bind 2 components:" />
        <CheckBox x:Name="checkBoxAgree"
                  Content="I Agree" Click="checkBoxAgree_Click" IsChecked="True" />
        <StackPanel Orientation="Horizontal">
            <Button x:Name="x" Content="Prev" />
            <Button x:Name="btNext" Content="Next" />
        </StackPanel>
    </StackPanel>
</Window>
