<Window x:Class="Ex1_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1_DataBinding"
        mc:Ignorable="d"
                Title="MainWindow"
        Height="350"
        Width="525">
    <StackPanel>
        <TextBlock Text="Disclaimer: abcdefghijklmnopqrstuvwxyz" />
        <CheckBox x:Name="checkBoxAgree"
                  Content="I Agree"
                  IsChecked="False"   />
        <StackPanel Orientation="Horizontal">
            <Button x:Name="x" Content="Prev" />
            <Button Content="Next"
                    IsEnabled="{Binding ElementName=checkBoxAgree, Path=IsChecked}" />
        </StackPanel>
    </StackPanel>
</Window> 

